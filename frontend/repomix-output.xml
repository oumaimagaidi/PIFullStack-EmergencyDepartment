          )
        );
      }
    );

    // destination updates
    socketRef.current.on(
      "destinationUpdate",
      ({ id, destinationLatitude, destinationLongitude }) => {
        setAmbulances((prev) =>
          prev.map((a) =>
            a._id === id
              ? {
                  ...a,
                  destination: `${destinationLatitude},${destinationLongitude}`,
                  lastUpdated: new Date().toISOString(),
