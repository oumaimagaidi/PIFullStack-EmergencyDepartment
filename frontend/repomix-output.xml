                  <div className="flex justify-end space-x-2">
                    <Button variant="outline" size="sm" onClick={cancelEditing}>
                      <X className="h-4 w-4 mr-1" />
                      Annuler
                    </Button>
                    <Button size="sm" onClick={() => saveEdit(annotation._id)}>
                      <Check className="h-4 w-4 mr-1" />
                      Enregistrer
                    </Button>
                  </div>
                </div>
              ) : (
                <div>
                  <p className="text-sm">{annotation.text}</p>
                  <div className="flex justify-end mt-2 space-x-1">
                    <Button variant="ghost" size="sm" className="h-7 px-2" onClick={() => toggleResolved(annotation)}>
                      {annotation.isResolved ? (
                        <>
                          <X className="h-3.5 w-3.5 mr-1" />
                          Rouvrir
                        </>
                      ) : (
                        <>
                          <Check className="h-3.5 w-3.5 mr-1" />
                          RÃ©soudre
                        </>
                      )}
                    </Button>
                    <Button variant="ghost" size="sm" className="h-7 px-2" onClick={() => startEditing(annotation)}>
                      <Edit className="h-3.5 w-3.5 mr-1" />
                      Modifier
                    </Button>
                    <Button
                      variant="ghost"
                      size="sm"
                      className="h-7 px-2 text-red-500 hover:text-red-700 hover:bg-red-50"
                      onClick={() => handleDelete(annotation._id)}
                    >
                      <Trash2 className="h-3.5 w-3.5 mr-1" />
                      Supprimer
                    </Button>
                  </div>
                </div>
              )}
            </CardContent>
          </Card>
        ))}
      </div>
    </div>
  )
}

const getColorClass = (type) => {
  switch (type) {
    case "comment":
      return "yellow-500"
    case "highlight":
      return "green-500"
    case "warning":
      return "red-500"
    case "question":
      return "blue-500"
    default:
      return "yellow-500"
  }
}

const getBadgeClass = (type) => {
  switch (type) {
    case "comment":
      return "bg-yellow-100 text-yellow-800 border-yellow-200"
    case "highlight":
      return "bg-green-100 text-green-800 border-green-200"
    case "warning":
      return "bg-red-100 text-red-800 border-red-200"
    case "question":
      return "bg-blue-100 text-blue-800 border-blue-200"
    default:
      return "bg-yellow-100 text-yellow-800 border-yellow-200"
  }
