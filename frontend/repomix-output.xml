      setAnnotations(annotations.map((a) => (a._id === annotation._id ? response.data : a)))

      if (onAnnotationUpdated) {
        onAnnotationUpdated(response.data)
      }
    } catch (err) {
      console.error("Erreur lors de la mise Ã  jour de l'annotation:", err)
